                                </goals>
                                <configuration>
                                    <codeGenerators>
                                        <generator>
                                            <codeGeneratorClass>
                                                org.opendaylight.mdsal.binding.javav2.maven.api.gen.plugin.CodeGeneratorImpl
                                            </codeGeneratorClass>
                                            <outputBaseDir>target/generated-sources/mdsalv2</outputBaseDir>
                                        </generator>
                                    </codeGenerators>
                                    <inspectDependencies>true</inspectDependencies>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.opendaylight.mdsal</groupId>
                                <artifactId>mdsal-binding2-maven-api-gen-plugin</artifactId>
                                <version>${org.opendaylight.mdsal.version}</version>
                            </dependency>
