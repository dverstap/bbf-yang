    <profiles>
        <profile>
            <id>java-binding-v1</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.opendaylight.yangtools</groupId>
                        <artifactId>yang-maven-plugin</artifactId>
                        <version>${org.opendaylight.yangtools.version}</version>
                        <executions>
                            <execution>
                                <id>generate-sources</id>
                                <goals>
                                    <goal>generate-sources</goal>
                                </goals>
                                <configuration>
                                    <codeGenerators>
                                        <generator>
                                            <codeGeneratorClass>
                                                org.opendaylight.mdsal.binding.maven.api.gen.plugin.CodeGeneratorImpl
                                            </codeGeneratorClass>
                                            <outputBaseDir>target/generated-sources/mdsalv1</outputBaseDir>
                                        </generator>
                                    </codeGenerators>
                                    <inspectDependencies>true</inspectDependencies>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.opendaylight.mdsal</groupId>
                                <artifactId>maven-sal-api-gen-plugin</artifactId>
                                <version>${org.opendaylight.mdsal.version}</version>
                            </dependency>
                            <!--
                            <dependency>
                                <groupId>org.opendaylight.yangtools</groupId>
                                <artifactId>yang-data-jaxen</artifactId>
                                <version>${org.opendaylight.yangtools.version}</version>
                            </dependency>
                            -->
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>java-binding-v2</id>
            <build>
                <plugins>
                    <plugin>
